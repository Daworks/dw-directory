/**
 * All of the CSS for your public-facing functionality should be
 * included in this file.
 */
.dw-container {
	font-size: 0.85em;
}
.dw-container a {
	color: #000;
}
.dw-container a:hover {
	color: #a1671f !important;
}
 .dw-container {
 	display: inline-block;
 	width: 100%;
 	border: 1px solid #ccc;
 	padding: 20px;
 	font-family: san-serif;
 	clear: both;
 }
 .dw-container a {
 	text-decoration: none !important;
 	box-shadow: none !important;
 }
 .dw-container form {

 }

 .dw-container h3 {
 	margin: 10px 0 !important;
 }

 .dw-container ul {
 	list-style: none;
 }
.dw-container ul.depth-root {
	column-count: 2;
}
 .dw-container ul.depth-root > li {
	display: inline-block;
	padding: 5px;
	font-weight: bold;
	width: 100%;
 }
 .dw-container ul.depth-root > li > ul.sub-category {
 	border-top:  1px solid #ccc;
 	width: 100%;
 	color: #000;
 	font-weight: normal;
 	padding: 10px 0;
 }

 .dw-container ul.sub-category {
 	margin-left: 0;	
 	column-count: 3;
 }

 @media (max-width:414px) {
 	.dw-container ul.sub-category {
 		column-count: 1;
 	}
 }

 @media (min-width:415px) and (max-width:768px) {
 	.dw-container ul.sub-category {
 		column-count: 2;
 	}
 }

 .dw-container .sub-category li {
 	margin: 0 5px;
 	text-align: left;
 	min-width: 10%;
 }
 .dw-container .sub-category li a {
 	line-height: 1.2em;
 }

 .dw-container .sub-category li:before {
 	content: '\f0da';
 	font-family: 'FontAwesome';
 	color: #eac286;
 	margin-right: 5px;
 }

.dw-container ul.second-cat > li {
	display: inline-block;
	margin-right: 20px;
}

.dw-container .clear {
	clear: both;
}

.dw-container table.sub-child-contents {
	border-collapse: collapse;
	border-top: 2px solid #ccc;
	border-bottom: 2px solid #ccc;
	border-left: none;
	border-right: none;
}

.dw-container table.sub-child-contents td {
	border: none;
	border-bottom:  1px solid #eee;
}

.dw-container table.sub-child-contents tr:hover td {
	background-color: #fcf9ec;
}

table.dw-content {
	border-top: 2px solid #ccc ;
	border-bottom: 2px solid #ccc ;
	border-left: none ;
	border-right: none ;
	border-collapse: collapse;
}
table.dw-content tr:hover td {
	background-color: #fcf9ec;
}
table.dw-content tr > td {
	border: none;
	border-bottom: 1px solid #eee;
	padding: 8px;
	line-height: 1.3em;
}
table.dw-content tr > td:nth-child(1) {
	width: 7%;
	text-align: center;
}
table.dw-content tr > td:nth-child(2) {
	width: 30%;
}
table.dw-content tr > td:nth-child(3) {
	width: 30%;
}
table.dw-content tr > td:nth-child(4) {
	width: 33%;
}

table.dw-content tr > td:nth-child(3) > a {
	text-decoration: none;
}

ul.dw-pagination {
	list-style: none;
	float: left;
}
ul.dw-pagination li {
	display: inline-block;
	border :  1px solid #ccc;
	line-height: 25px;
	width: 25px;
	height: 25px;
	margin: 0 2px;
	text-align: center;
}
ul.dw-pagination li.active {
	background-color: #a37b1f;
	color: #fff;
}
ul.dw-pagination li a {
	display: block;
	width: 100%;
	height: 100%;
}
ul.dw-pagination li a:hover {
	background-color: #a37b1f;
	color: #fff;
}
ul.dw-pagination li.prev, ul.dw-pagination li.next {
	width:  40px;
}

.dw-catbox {
	border-radius: 8px;
	display: inline-block;
	padding: 10px;
	background-color: #eff4ea;
	width: 100%;
}
.dw-catbox fieldset {
	border: none;
}
.dw-catbox fieldset label {
	clear: both;
	display: block;
	margin-top: 10px;
}
.dw-catbox fieldset select {
	display: inline-block;
	height:40px ;
}
.dw-catbox input[type="text"], .dw-catbox textarea {
	background-color: #fff;
}
.dw-catbox fieldset input[type="text"]{
	max-width: 50%;
	padding:0.625em 0.4375em;
}

.page-info {
	float: right;
}
.clear > .breadcumb {
	background-color: #efeff2;
	border-top: 1px solid #eee; 
	border-bottom: 1px solid #eee; 
	column-span:  all;
	width: 100%;
	padding: 5px 0;
}
.breadcumb {
	float: left;
	list-style: none;
}
.breadcumb li {
	display: inline-block;
}
.breadcumb li:after {
	content: "\f105";
	font-family: 'FontAwesome';
	margin:0 5px;
	color: #eac286;
}
.breadcumb li:last-child:after {
	content: '';
}
.breadcumb > li:first-child:before {
	content: "\f0c9";
	font-family: 'FontAwesome';
	margin:0 5px;
	color: #eac286;
}
.dw-button-set {
	float: right;
}
.dw-button-set button {
	font-size: 14px;
	margin-bottom: 20px;
	background-color: #b89869;
	border-radius: 4px;
	padding: 8px 10px;
}
.dw-button-set button.edit {
	background-color: #b7605a;
}
.dw-button-set button:hover {
	background-color: #351e1c;
}

.dw-container #new-category-form {
	clear: both;
	padding: 10px;
	background-color: #eee;
}
.dw-container #new-category-form fieldset {
	border: none;
	margin: 0;
}
.dw-container #new-category-form fieldset label {
	clear: both;
	display: block;
}
.dw-container #new-category-form fieldset select {
	height:  40px;
}
.dw-container #new-category-form fieldset input[type="text"],
.dw-container #new-category-form fieldset textarea {
	background-color: #fff;
}
.dw-container #new-category-form fieldset input[type="button"] {
	background-color: #b89869;
	padding: 8px 10px;
}
.dw-container #new-category-form fieldset input[type="button"]:hover {
	background-color: #351e1c;
}